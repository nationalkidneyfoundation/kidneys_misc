function kidneys_misc_get_filtered_form($categories, $placeholder) {
  static $i = 0;

  foreach($categories as $category) {
    $terms[] = $category['tid'];
  }
  $form_id = 'kidneys_misc_filtered_form_' . $i;// . user_password();
  $i++;
  $form = drupal_get_form($form_id, $terms, $placeholder);
  return render($form);
}
function kidneys_misc_filtered_form($form, &$form_state, $terms, $placeholder = '') {
  $form = array();

  $form['container'] = array(
    '#type' => 'container',
    '#attributes' => array(
      'class' => array(
        'search-form',
      ),
    ),
  );
  $form['container']['query'] = array(
    '#type' => 'textfield',
    '#required' => TRUE,
    '#attributes' => array(
      'placeholder' => trim($placeholder),
    )
  );
  $form['container']['submit_button'] = array(
    '#type' => 'submit',
    '#value' => t('search'),
    '#attributes' => array(
      'class' => array(
        'button--orange',
      ),
    ),
  );
  $form['terms'] = array(
    '#type' => 'hidden',
    '#value' => implode('-', $terms)
  );

  $form['#submit'] = array('kidneys_misc_filtered_form_submit');
  return $form;
}

function kidneys_misc_filtered_form_submit($form, &$form_state) {
  $terms = explode('-', $form_state['values']['terms']);
  foreach($terms as $i => $term) {
    if(!empty($term)) {
      $query['f['.$i.']'] = 'field_ia_category:' .$term;
    }
  }
  $query['solr-keywords'] = $form_state['values']['query'];

  drupal_goto('site-search', array('query' => $query));
}

