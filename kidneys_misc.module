function kidneys_misc_get_category_tid_values($node) {
  $return = '';
  if (isset($node->field_base_category)) {
    $multiple = 3;
    foreach ($node->field_base_category[LANGUAGE_NONE] as $i => $value) {
      $return .= str_repeat('<<' . $value['tid'] . '>> ', ($i >= $multiple) ? 1 : $multiple - $i);
    }
  }
  return $return;
}

